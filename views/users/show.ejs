<%- include ("../partials/header")%>

<div class="row">
    <div class="col-md-4">
        <h2><%= user.firstName.charAt(0).toUpperCase() + user.firstName.slice(1)%>
            <%= user.lastName.charAt(0).toUpperCase() + user.lastName.slice(1) %></h2>
        <div class="thumbnail">
            <img src="<%= user.avatar %>" alt="user image" class="img-responsive">
            <div class="caption">
                <a href="mailto:<%= user.email%>" target="_blank"> <%= user.email%></a>
            </div>
        </div>
    </div>
    <div class="col-md-8 text-center">
        <h2><%= user.username%>'s campgrounds: </h2>
        <div class="row">
            <div class="col-md-10">
                <div class="thumbnail">
                    <% campgrounds.forEach( function(campground) { %>
                    <img src="<%= campground.image%>" alt="" class="img-responsive">
                    <div class="caption">
                        <a href="/campgrounds/<%= campground.id%>"><%= campground.name %></a>
                    </div>

                    <% })%>
                </div>
            </div>
        </div>

        </ul>
    </div>

</div>



<%- include  ("../partials/footer")%>
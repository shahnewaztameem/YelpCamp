<%- include ("../partials/header")%>

    <div class="row">
        <h1 class="text-center">Edit <%= campground.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Enter campground name" value="<%= campground.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="Enter campground price" min="0.5" step="0.5" value="<%= campground.price%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="file" id="image" name="image" placeholder="Enter image url" accept="image/*" >
                </div>
                <div class="form-group">
                    <textarea name="description" id="" cols="30" rows="10" placeholder="Enter description"
                        class="form-control"><%= campground.description%></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                </div>
            </form>
            <a href="/">Go back</a>
        </div>

    </div>


<%- include ("../partials/footer")%>
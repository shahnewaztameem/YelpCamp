<%- include ("../partials/header")%>
<div class="container">
    <div class="row">
        <h1 class="text-center">Add a new comment to  <%= campground.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id%>/comments" method="POST">
                <div class="form-group">
                    <textarea name="comment[text]" id="" cols="30" rows="10" placeholder="Write a comment.." class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="Author">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                </div>
            </form>
            <a href="/">Go back</a>
        </div>

    </div>
</div>

<%- include ("../partials/footer")%>